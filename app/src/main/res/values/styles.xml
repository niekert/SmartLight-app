<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="listView" parent="@android:style/Widget.ListView">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:itemPadding">5dp</item>
        <item name="android:divider">@color/holo_blue</item>
    </style>

    <style name="lampSwitch" parent="@android:style/Widget.ListView">
         <item name="android:thumbTextPadding">5dp</item>
    </style>

    <style name="horizontalLine">
        <item name="android:background">@drawable/lineshape</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="gradientBackground">
        <item name="android:background">@drawable/gradient_background</item>
    </style>

    <style name="formLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
